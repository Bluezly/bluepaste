<div class="container">
  <section class="error-section" role="main">
    <div class="error-container">
      <div class="error-content">
        <div class="error-visual">
          <div class="error-icon" aria-hidden="true">
            <% if (title && title.includes('404')) { %> ğŸ” <% } else if (title
            && title.includes('500')) { %> âš ï¸ <% } else if (title &&
